{
  "name": "opentopia",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "cf-typegen": "wrangler types",
    "deploy": "pnpm run build && wrangler deploy",
    "dev": "cross-env NODE_ENV=development nodemon --watch app --watch workers --watch vite.config.ts --watch tsconfig.json --ext ts,tsx,js,jsx,css --exec \"react-router build --mode development && wrangler dev\"",
    "clean": "rm -rf .react-router build .wrangler",
    "postinstall": "npm run cf-typegen",
    "preview": "pnpm run build && vite preview",
    "typecheck": "npm run cf-typegen && react-router typegen && tsc -b"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@react-router/node": "^7.6.1",
    "@react-three/drei": "^10.1.2",
    "@react-three/fiber": "^9.1.2",
    "@tanstack/react-query": "^5.79.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "hono": "^4.7.10",
    "iron-session": "^8.0.4",
    "isbot": "^5.1.27",
    "lucide-react": "^0.511.0",
    "maath": "^0.10.8",
    "motion": "^12.15.0",
    "nanoid": "^5.1.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.5.3",
    "react-use-websocket": "^4.13.0",
    "sonner": "^2.0.4",
    "tailwind-merge": "^3.3.0",
    "three": "^0.177.0",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.0.12",
    "@react-router/dev": "^7.5.3",
    "@tailwindcss/vite": "^4.1.4",
    "@types/node": "^20",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/three": "^0.176.0",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10",
    "tailwindcss": "^4.1.4",
    "tw-animate-css": "^1.3.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.18.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all",
    "arrowParens": "avoid"
  }
}
